{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/types/*.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "openapi-ts.config.ts"
  ],
  "exclude": [
    "src/db/edgeql-js/**/*",
    "node_modules",
    "assets"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "verbatimModuleSyntax": false,
  }
}