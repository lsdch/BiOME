{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/types/*.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "openapi-ts.config.ts"
  ],
  "exclude": [
    "src/db/edgeql-js/**/*",
    "node_modules",
    "assets"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "composite": false,
    "lib": [
      "ES2023",
      "ESNext",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "verbatimModuleSyntax": false,
  }
}